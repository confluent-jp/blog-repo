src="https://confluent-jp.github.io/community/community/media/blogs/confluent-cloud-23Q3-launch/enterprise-clusters_hudcb5501b6a71e95e8db9e97022c961b4_156794_2d533c3cc14f04ebba6beda84afd4b62.webp"
